<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.visualacuity">

    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_eye"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_eye_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".EyeChange"
            android:theme="@style/MainActivityTheme"></activity>
        <activity
            android:name=".ResultActivity"
            android:theme="@style/MainActivityTheme" />
        <activity
            android:name=".InstructionActivity"
            android:theme="@style/MainActivityTheme" />

        <activity
            android:name=".MainActivity"
            android:theme="@style/MainActivityTheme" />
        <activity
            android:name=".HomeActivity"
            android:noHistory="true"
            android:theme="@style/HomeActivityTheme" />
        <activity
            android:name=".Database"
            android:theme="@style/MainActivityTheme" />
        <activity
            android:name=".AddResult"
            android:theme="@style/AddResultTheme" />
        <activity
            android:name=".user"
            android:theme="@style/UserTheme" />
        <activity
            android:name=".SplashScreen"
            android:noHistory="true"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>