<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        app:cardBackgroundColor="@color/skyblue"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/symbolright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_textview_red"
                android:gravity="center"
                android:text="R"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/snellenright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/symbolright"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:text="Snellen:"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/RUnitchange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/snellenright"
                android:background="@drawable/rounded_rectangle"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Metric"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/Rsnellen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/symbolright"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="40dp"
                android:layout_toRightOf="@id/snellenright"
                android:text="ABC"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/logmarright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RUnitchange"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="LogMAR:"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/Rlogmar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/RUnitchange"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/logmarright"
                android:text="XYZ"
                android:textColor="@color/black"
                android:textSize="25dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        app:cardBackgroundColor="@color/skyblue"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/symbolleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_textview_black"
                android:gravity="center"
                android:text="L"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/snellenleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/symbolleft"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:text="Snellen:"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/LUnitchange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/snellenleft"
                android:background="@drawable/rounded_rectangle"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Metric"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/Lsnellen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/symbolleft"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="40dp"
                android:layout_toRightOf="@id/snellenleft"
                android:text="ABC"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/logmarleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/LUnitchange"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="LogMAR:"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/Llogmar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/LUnitchange"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/logmarleft"
                android:text="XYZ"
                android:textColor="@color/black"
                android:textSize="25dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
    <Button
        android:id="@+id/retake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:layout_marginTop="104dp"
        android:background="@drawable/button_retake"
        android:text="Retake test"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="@color/white"
        android:layout_above="@id/retake"
        android:background="@drawable/button_retake"
        android:text="ADD RESULT" />
</RelativeLayout>
